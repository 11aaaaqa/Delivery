@model Delivery.Models.Roles.CreateRole
    <link rel="stylesheet" href="~/css/Button.css" />
<div>
    <h2>Создать новую роль</h2>
    <form method="post" asp-controller="Administration" asp-action="CreateRole">
        <div asp-validation-summary="ModelOnly"></div>
        <div>
            <label asp-for="RoleName"></label><br/>
            <input asp-for="RoleName"/>
            <span asp-validation-for="RoleName"></span>
        </div>
        <div>
            <br/><input type="submit" class="btn" value="Создать"/>
        </div>
    </form>
</div>
